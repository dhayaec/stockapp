{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "prettier --write . && next lint",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "prepare": "husky install",
    "type-check": "tsc --pretty --noEmit"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "next": "latest",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.3",
    "@testing-library/react": "12.1.4",
    "@testing-library/user-event": "13.5.0",
    "@types/node": "17.0.23",
    "@types/react": "17.0.43",
    "autoprefixer": "^10.4.4",
    "babel-jest": "27.5.1",
    "eslint": "8.12.0",
    "eslint-config-next": "12.1.1",
    "eslint-plugin-testing-library": "5.1.0",
    "husky": "^7.0.4",
    "jest": "27.5.1",
    "lint-staged": "^12.3.7",
    "postcss": "^8.4.12",
    "prettier": "^2.6.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "*{.js,.jsx,.ts,.tsx}": "eslint --cache --fix",
